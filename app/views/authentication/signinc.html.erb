
 <div class="container">
    <div class="jumbotron">
      <h1>welcome to enginectra</h1>
      <h2>sign in as a customer</h2>
<form action = "/index" method= "POST">
<input type="hidden" name= "authenticity_token" value="<%=form_authenticity_token %>">
  <div class="form-group">
    <label for="email">email address</label>
    <input type="email" class="form-control" id="email" name= "login[email]" placeholder="name@example.com">
  </div>

  <div class="form-group">
    <label for="password">password</label>
    <input class="form-control" id="password" name = "login[email]">
  </div>
   <input type="submit" name= "submit" class="btn btn-primary submit">
</form>
</div>
</div>   


<p>Sign In</p>
<%= form_with model: @customer  do |form| %>
  <p>
  <%= form.label 'Email:' %><br/> 
  <%= form.text_field :email, id: :email, id: :email, class: :email %>
  </p>
  <p>
  <%= form.label 'Password:' %><br/>
  <%= form.password_field :password, id: :password, class: :password %>
  </p>

  <p>
    <%= form.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
    <%= form.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>







